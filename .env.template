# WomCast Environment Configuration Template
# Copy this file to .env and customize for your deployment

# ============================================================================
# GENERAL SETTINGS
# ============================================================================
NODE_ENV=development
LOG_LEVEL=info

# ============================================================================
# API GATEWAY
# ============================================================================
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=3000

# Service URLs (microservice endpoints)
METADATA_SERVICE_URL=http://localhost:3001
PLAYBACK_SERVICE_URL=http://localhost:3002
VOICE_SERVICE_URL=http://localhost:3003
SEARCH_SERVICE_URL=http://localhost:3004
CAST_SERVICE_URL=http://localhost:3005

# ============================================================================
# METADATA SERVICE
# ============================================================================
METADATA_HOST=0.0.0.0
METADATA_PORT=3001

# Database
METADATA_DB_PATH=/data/metadata.db
METADATA_DB_POOL_SIZE=20

# Media paths
MEDIA_ROOT=/media
VIDEO_PATHS=/media/movies,/media/tv
AUDIO_PATHS=/media/music
PHOTO_PATHS=/media/photos
GAME_PATHS=/media/games

# Indexing
INDEX_INTERVAL_HOURS=24
INDEX_ON_STARTUP=true

# ============================================================================
# PLAYBACK SERVICE
# ============================================================================
PLAYBACK_HOST=0.0.0.0
PLAYBACK_PORT=3002

# Kodi bridge settings
KODI_ENABLED=true
KODI_HOST=localhost
KODI_PORT=8080
KODI_USERNAME=kodi
KODI_PASSWORD=

# mpv fallback
MPV_ENABLED=true
MPV_HWDEC=auto
MPV_VO=gpu

# Hardware acceleration (Pi 5)
ENABLE_GPU_DECODE=true
ENABLE_GPU_RENDER=true

# ============================================================================
# VOICE SERVICE
# ============================================================================
VOICE_HOST=0.0.0.0
VOICE_PORT=3003

# Whisper model configuration
WHISPER_MODEL=small
WHISPER_DEVICE=cpu
WHISPER_LANGUAGE=en

# Model cache
WHISPER_CACHE_DIR=/data/models/whisper

# Audio input
AUDIO_SAMPLE_RATE=16000
AUDIO_DEVICE_INDEX=0

# ============================================================================
# SEARCH SERVICE
# ============================================================================
SEARCH_HOST=0.0.0.0
SEARCH_PORT=3004

# ChromaDB
CHROMA_DB_PATH=/data/chroma
CHROMA_COLLECTION_NAME=womcast_media

# LLM (Ollama)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:1b
OLLAMA_TIMEOUT_SECONDS=30

# Embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# ============================================================================
# SETTINGS SERVICE
# ============================================================================
SETTINGS_HOST=0.0.0.0
SETTINGS_PORT=3006
MEDIA_DB_PATH=/data/womcast.db

# ============================================================================
# FRONTEND (Electron)
# ============================================================================
VITE_API_GATEWAY_URL=http://localhost:3000
VITE_VOICE_API_URL=http://localhost:3003
VITE_SETTINGS_API_URL=http://localhost:3006
VITE_CAST_API_URL=http://localhost:3005
VITE_ENABLE_DEVTOOLS=true

# ============================================================================
# SECURITY
# ============================================================================
# API authentication (optional, recommended for production)
ENABLE_AUTH=false
JWT_SECRET=change-me-in-production
JWT_EXPIRY_HOURS=24

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# MONITORING & TELEMETRY
# ============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090

ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ============================================================================
# RASPBERRY PI SPECIFIC
# ============================================================================
# GPIO pins (for IR remote, power button, etc.)
GPIO_POWER_BUTTON=17
GPIO_IR_RECEIVER=18

# Display
HDMI_MODE=16  # 1080p60
ENABLE_CEC=true

# Performance
GPU_MEM=256
OVERCLOCK=false
